{
  "name": "peptide-tracker-lambda-apis",
  "version": "1.0.0",
  "description": "AWS Lambda functions for Peptide Tracker with Git-based deployment",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build-all.js",
    "test": "node scripts/test-local.js",
    "build:hello-world": "cd src/hello-world && npm run build",
    "build:auth": "cd src/auth_service && npm run build",
    "install:all": "cd src/hello-world && npm install && cd ../auth_service && npm install",
    "deploy:infrastructure": "cd infrastructure && terraform init && terraform apply",
    "deploy:complete": "chmod +x scripts/deploy-complete.sh && ./scripts/deploy-complete.sh",
    "deploy:enhanced": "chmod +x scripts/deploy-complete-enhanced.sh && ./scripts/deploy-complete-enhanced.sh",
    "setup:local": "chmod +x scripts/setup-local-environment.sh && ./scripts/setup-local-environment.sh",
    "setup:secrets": "chmod +x scripts/setup-github-secrets.sh && ./scripts/setup-github-secrets.sh"
  },
  "keywords": [
    "aws",
    "lambda",
    "typescript",
    "git-deployment",
    "ci-cd",
    "github-actions"
  ],
  "author": "Peptide Tracker Team",
  "license": "MIT",
  "devDependencies": {
    "child_process": "^1.0.2"
  }
}
