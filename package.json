{
  "name": "peptide-tracker-lambda-apis",
  "version": "1.0.0",
  "description": "AWS Lambda functions for Peptide Tracker with Git-based deployment",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build-all.js",
    "test": "node scripts/test-local.js",
    "build:hello-world": "cd src/hello-world && npm run build",
    "build:auth": "cd src/auth_service && npm run build",
    "install:all": "cd src/hello-world && npm install && cd ../auth_service && npm install",
    "deploy:infrastructure": "cd infrastructure && terraform init && terraform apply",
    "deploy:complete": "chmod +x scripts/deploy-complete.sh && ./scripts/deploy-complete.sh",
    "deploy:with-credentials": "chmod +x scripts/deploy-with-credentials.sh && ./scripts/deploy-with-credentials.sh",
    "setup:credentials": "chmod +x scripts/setup-credentials-validation.sh && ./scripts/setup-credentials-validation.sh",
    "setup:secrets": "chmod +x scripts/setup-github-secrets.sh && ./scripts/setup-github-secrets.sh",
    "setup:aws-profile": "chmod +x scripts/setup-aws-profile.sh && ./scripts/setup-aws-profile.sh",
    "setup:aws-profile:win": "powershell -ExecutionPolicy Bypass -File scripts/setup-aws-profile.ps1",
    "deploy:infrastructure:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-infrastructure.ps1",
    "setup:secrets:win": "powershell -ExecutionPolicy Bypass -File scripts/setup-github-secrets.ps1",
    "deploy:complete:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-complete.ps1"
  },
  "keywords": [
    "aws",
    "lambda",
    "typescript",
    "git-deployment",
    "ci-cd",
    "github-actions"
  ],
  "author": "Peptide Tracker Team",
  "license": "MIT",
  "devDependencies": {
    "child_process": "^1.0.2"
  }
}
